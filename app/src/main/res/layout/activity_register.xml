<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/activity_login_background"
    android:paddingHorizontal="48sp"
    android:paddingBottom="30sp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="40dp"
        android:id="@+id/back"/>

    <TextView
        android:layout_marginTop="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome you!"
        android:textColor="@color/color_blue"
        android:textSize="32sp"
        android:id="@+id/hello_you"
        android:fontFamily="@font/segoe_ui_bold"/>

    <EditText
        android:layout_below="@id/hello_you"
        android:paddingVertical="12sp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/color_blue"
        android:textColorHint="@color/color_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="75dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:id="@+id/username"></EditText>

    <EditText
        android:layout_below="@+id/username"
        android:paddingVertical="12sp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/color_blue"
        android:textColorHint="@color/color_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:id="@+id/full_name"></EditText>

    <EditText
        android:paddingVertical="12sp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/color_blue"
        android:textColorHint="@color/color_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:id="@+id/email"
        android:layout_below="@+id/full_name"
        android:inputType="textEmailAddress"></EditText>

    <EditText
        android:paddingVertical="12sp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/color_blue"
        android:textColorHint="@color/color_blue"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:id="@+id/password"
        android:inputType="textPassword"></EditText>

    <Button
        android:layout_marginTop="50sp"
        android:layout_below="@+id/password"
        android:layout_width="wrap_content"
        android:paddingHorizontal="52sp"
        android:paddingVertical="15sp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/segoe_ui"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/register"></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_grey"
            android:text="Do you have an account?"
            android:id="@+id/have_an_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:text="Login."
            android:textColor="@color/color_pink"
            android:layout_toEndOf="@+id/have_an_account"
            android:id="@+id/login_user"/>

    </LinearLayout>

</RelativeLayout>